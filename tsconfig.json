{
    "compilerOptions": {
        "charset": "utf8",
        "declaration": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": ["es5", "es6", "dom", "es2015.promise"],
        "module": "es6",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es5",
        "baseUrl": "./",
        "paths": {
            "OfficeFabric/*": ["node_modules/office-ui-fabric-react/lib/*"],
            "VSSUI/*": ["node_modules/vss-ui/*"]
        },
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "types": [
            "q",
            "knockout",
            "requirejs",
            "jquery",
            "react",
            "react-dom"
        ]
    },
    "exclude": [
        "node_modules",
        "demo"
    ]
}