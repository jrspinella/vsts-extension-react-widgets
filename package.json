{
    "name": "vsts-extension-react-widgets",
    "version": "1.9.0",
    "description": "Reusable React components based on office fabric for building VSTS extensions.",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/mohitbagra/vsts-extension-react-widgets"
    },
    "license": "MIT",
    "author": "Mohit Bagra",
    "scripts": {
        "clean": "rimraf lib dist",
        "cleanall": "npm run clean && rimraf typings node_modules",
        "build": "npm run clean && tsc -d true --outDir ./lib && npm run copycss && webpack --display-error-details --progress --colors --output-path ./dist -p",
        "copycss": "(robocopy src lib *.scss /mir /s) ^& IF %ERRORLEVEL% LEQ 1 exit 0",
        "package:demo": "node ./demo/packageDev",
        "start": "webpack-dev-server --config webpack.demo.config.js -d --hot --progress --colors --https --content-base ./ --port 8888",
        "postinstall": "typings install"
    },
    "devDependencies": {
        "@types/react": "^16.0.9",
        "@types/react-dom": "^16.0.0",
        "@types/jquery": "2.0.41",
        "webpack": "3.8.1",
        "webpack-dev-server": "2.9.4",
        "rimraf": "2.6.2",
        "sass-loader": "6.0.6",
        "style-loader": "0.19.0",
        "css-loader": "0.28.7",
        "ts-loader": "3.1.1",
        "node-sass": "4.6.0",
        "typescript": "2.6.1",
        "typings": "2.1.1",
        "uglifyjs-webpack-plugin": "1.0.1",
        "tfx-cli": "0.4.11"
    },
    "dependencies": {
        "es6-promise": "4.1.1",
        "vss-ui": "3.125.2",
        "vss-web-extension-sdk": "4.125.2",
        "office-ui-fabric-react": "~5.9.0",
        "trumbowyg": "2.8.1",
        "dateformat": "3.0.2",
        "@xkeshi/image-compressor": "0.5.2",
        "tslib": "~1.7.1"
    }
}
